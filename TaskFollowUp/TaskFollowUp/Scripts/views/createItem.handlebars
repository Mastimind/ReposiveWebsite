<form class="form-horizontal"  data-bind="jqmsubmit: createItem">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">×</button>
    <h3>Sprint details</h3>
  </div>
  <div class="modal-body" data-bind="with: properties">

    <div class="control-group">
      <label class="control-label" for="input01">Title</label>
      <div class="controls">
        <input type="text" class="input-xlarge" id="input01" data-bind="value: Title" required="" />
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input-startdate">Start Date</label>
      <div class="controls">
        <input type="date" class="input-xlarge" id="input-startdate" data-bind="value: StartDate" required=""/>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="input-enddate">End Date</label>
      <div class="controls">
        <input type="date" class="input-xlarge" id="input-enddate" data-bind="value: EndDate" required="" />
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
    <button type="submit" class="btn btn-primary">Save changes</button>
  </div>
</form>